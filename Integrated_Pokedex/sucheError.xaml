<Window x:Class="Integrated_Pokedex.sucheError"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Integrated_Pokedex"
        mc:Ignorable="d"
        Title="sucheError" Height="150" Width="200">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock FontSize="20px" TextAlignment="Center" FontWeight="Bold" Foreground="Red">ERROR</TextBlock>
            <TextBlock Margin="0,10" TextAlignment="Center">Bitte geben Sie richtige Werte ein!</TextBlock>
            <Button Margin="5,20" Width="50" IsCancel="True">OK</Button>
        </StackPanel>
    </Grid>
</Window>
